<!DOCTYPE html>
<html>
<head>
  <title>Nwen304Team12</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Nwen 304 Team 12 Marketplace", root_path, class: "navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in?%>
            <%= link_to "Profile", current_user, class: "btn btn-primary" %>
            <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-primary" %>
      <% else %>
            <%= link_to "Sign up now!", signup_path, class: "btn btn-primary" %>
            <%= link_to "Login", login_path, class: "btn btn-primary" %>
        <% end %>

      </ul>
    </div>
  </div>
</nav>


<div class="container">
  <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
  <%= yield %>
</div>
<%= debug(params) if Rails.env.development? %>

</body>
</html>
